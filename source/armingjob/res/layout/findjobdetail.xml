<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/i_ming" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/armingjob_findjob_LinearLayout_titlejob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <!--
        <TextView
            android:id="@+id/armingjob_findjob_title_titlejob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armingjob_findjob_titlejob" />
        -->
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_job" />
        
        <TextView
            android:id="@+id/armingjob_findjob_value_titlejob"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/armingjob_findjob_LinearLayout_companyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/armingjob_findjob_LinearLayout_titlejob"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_building" />
        
        <!--
        <TextView
            android:id="@+id/armingjob_findjob_title_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armingjob_findjob_companyname" />
        -->
        
        <TextView
            android:id="@+id/armingjob_findjob_value_companyName"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/armingjob_findjob_LinearLayout_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/armingjob_findjob_LinearLayout_companyName"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <!--
        <TextView
            android:id="@+id/armingjob_findjob_title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armingjob_findjob_address" />
        -->
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_location2" />
        
        <TextView
            android:id="@+id/armingjob_findjob_value_address"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/armingjob_findjob_LinearLayout_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/armingjob_findjob_LinearLayout_address"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <!--
        <TextView
            android:id="@+id/armingjob_findjob_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armingjob_findjob_time" />
        -->
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_time" />
        
        <TextView
            android:id="@+id/armingjob_findjob_value_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
